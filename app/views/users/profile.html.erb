<h1><%= current_user.username %></h1>
<h6>(<%= current_user.full_name %>)</h6>
<div><img style="width:12%;" src="<%= current_user.avatar.url %>" /></div>
<h2><%= current_user.full_name %>'s Cars</h2>
<table class="table">
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
    <th>Color</th>
    <th>Image</th>
    <th>View</th>
  </tr>
  <% current_user.cars.each do |car| %>
    <tr>
      <td><%= car.make %></td>
      <td><%= car.model %></td>
      <td><%= car.year %></td>
      <td><%= car.color %></td>
      <td style="width:25%;"><img style="width:50%;" src="<%= car.car_image.url %>" /></td>
      <td><%= link_to "View", car_path(car), class: "btn btn-default" %></td>
    </tr>
  <% end %>
</table>

<h2><%= current_user.full_name %>'s Blog Entries</h2>
<hr />
<% current_user.blogs.each do |blog| %>
<h3><%= blog.title %></h3>
<small><p><b>Published On:</b> <%= blog.created_at %></p></small>
<p><%= blog.text %></p>
<%= link_to "View", blog_path(blog), class: "btn btn-primary" %>
<% end %>

<br />
<br />
<%= link_to "New Car?", new_car_path, class: "btn btn-default" %>
<%= link_to "New Blog Entry?", new_blog_path, class: "btn btn-default" %>
 